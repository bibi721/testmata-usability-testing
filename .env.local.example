# Masada Next.js Environment Variables
# Copy this file to .env.local and update the values

# Database Configuration
DATABASE_URL="postgresql://masada_user:masada_password@localhost:5432/masada_db"

# For Vercel Postgres (recommended for production)
# DATABASE_URL="postgres://default:password@host:5432/verceldb?sslmode=require"

# For Railway
# DATABASE_URL="postgresql://postgres:password@host:5432/railway"

# For Neon
# DATABASE_URL="postgresql://user:password@host:5432/neondb?sslmode=require"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# For production
# NEXTAUTH_URL="https://your-domain.com"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Ethiopian Configuration
DEFAULT_TIMEZONE="Africa/Addis_Ababa"
DEFAULT_CURRENCY="ETB"
SUPPORTED_LANGUAGES="en,am"

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@masada.et"

# Ethiopian Payment Integration (future)
CHAPA_SECRET_KEY="your-chapa-secret-key"
TELEBIRR_API_KEY="your-telebirr-api-key"

# Development flags
NODE_ENV="development"